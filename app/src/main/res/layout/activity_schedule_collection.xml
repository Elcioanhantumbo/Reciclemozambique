<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F8F6"
    android:padding="16dp">

    <!-- ===== Cabeçalho ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_forward"
            app:tint="#112112" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Schedule Collection"
            android:textColor="#112112"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- ===== Indicadores ===== -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#19E62B"
            android:backgroundTint="#19E62B"
            android:backgroundTintMode="src_in"
            android:clipToOutline="true"
            android:radius="4dp" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#3319E62B" />

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="#3319E62B" />
    </LinearLayout>

    <!-- ===== Título Principal ===== -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Material Type"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- ===== Grade de Materiais ===== -->
    <GridLayout
        android:id="@+id/gridMaterials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Item: Plastic -->
        <RadioButton
            android:id="@+id/rbPlastic"
            style="@style/MaterialItemStyle"
            android:text="Plastic"
            android:button="@null"
            android:drawableTop="@drawable/ic_recycling" />

        <!-- Item: Glass -->
        <RadioButton
            android:id="@+id/rbGlass"
            style="@style/MaterialItemStyle"
            android:text="Glass"
            android:button="@null"
            android:drawableTop="@drawable/ic_liquor" />

        <!-- Item: Paper -->
        <RadioButton
            android:id="@+id/rbPaper"
            style="@style/MaterialItemStyle"
            android:text="Paper"
            android:checked="true"
            android:button="@null"
            android:drawableTop="@drawable/ic_description" />

        <!-- Item: Metal -->
        <RadioButton
            android:id="@+id/rbMetal"
            style="@style/MaterialItemStyle"
            android:text="Metal"
            android:button="@null"
            android:drawableTop="@drawable/ic_magnet" />

        <!-- Item: Electronics -->
        <RadioButton
            android:id="@+id/rbElectronics"
            style="@style/MaterialItemStyle"
            android:text="Electronics"
            android:button="@null"
            android:drawableTop="@drawable/ic_cable" />

        <!-- Item: Other -->
        <RadioButton
            android:id="@+id/rbOther"
            style="@style/MaterialItemStyle"
            android:text="Other"
            android:button="@null"
            android:drawableTop="@drawable/ic_more" />
    </GridLayout>

    <!-- ===== Botão "Next" ===== -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#19E62B"
        android:text="Next"
        android:textColor="#112112"
        android:textStyle="bold"
        android:textSize="18sp"
        android:radius="8dp" />
</LinearLayout>
