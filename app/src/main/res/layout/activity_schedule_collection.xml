<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.ScheduleCollectionActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Botão Voltar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconSize="24dp"
            app:iconTint="?attr/colorOnSurface"
            app:backgroundTint="@null"
            android:contentDescription="@string/back" />

        <!-- Título -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/schedule_collection_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

    <!-- Indicador de Progresso (3 barras horizontais) -->
    <LinearLayout
        android:id="@+id/progressIndicator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <!-- Passo 1: Cheio (primary) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/primary"
            />  <!-- Shape arredondado -->

        <!-- Passo 2: Semi (primary/20) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/primary_light" />

        <!-- Passo 3: Semi (primary/20) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="@color/primary_light" />

    </LinearLayout>

    <!-- Conteúdo Principal -->

    <!-- Botão Next (bottom fixed) -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/buttonNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/select_material_type"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <!-- RadioGroup para Materiais (Grid 2 colunas) -->
            <RadioGroup
                android:id="@+id/radioGroupMaterials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Linha 1: Plastic e Glass -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Plastic -->
                    <RadioButton
                        android:id="@+id/radioPlastic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/material_card_selector"
                        android:buttonTint="@color/selector_radio_tint"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/plastic"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_recycling"
                        app:iconSize="48dp"
                        app:iconTint="@color/primary" />

                    <!-- Glass -->
                    <RadioButton
                        android:id="@+id/radioGlass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/material_card_selector"
                        android:buttonTint="@color/selector_radio_tint"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/glass"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_liquor"
                        app:iconSize="48dp"
                        app:iconTint="@color/primary" />

                </LinearLayout>

                <!-- Linha 2: Paper (pré-selecionado) e Metal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Paper -->
                    <RadioButton
                        android:id="@+id/radioPaper"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/material_card_selector"
                        android:buttonTint="@color/selector_radio_tint"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/paper"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_description"
                        app:iconSize="48dp"
                        app:iconTint="@color/primary" />

                    <!-- Metal -->
                    <RadioButton
                        android:id="@+id/radioMetal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/material_card_selector"
                        android:buttonTint="@color/selector_radio_tint"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/metal"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_recycle"
                        app:iconSize="48dp"
                        app:iconTint="@color/primary" />

                </LinearLayout>

                <!-- Linha 3: Electronics e Other -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Electronics -->
                    <RadioButton
                        android:id="@+id/radioElectronics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/material_card_selector"
                        android:buttonTint="@color/selector_radio_tint"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/electronics"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_cable"
                        app:iconSize="48dp"
                        app:iconTint="@color/primary" />

                    <!-- Other -->
                    <RadioButton
                        android:id="@+id/radioOther"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/material_card_selector"
                        android:buttonTint="@color/selector_radio_tint"
                        android:checked="false"
                        android:gravity="center"
                        android:text="@string/other"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_more_horiz"
                        app:iconSize="48dp"
                        app:iconTint="@color/primary" />

                </LinearLayout>

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNext"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:text="@string/next"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:textStyle="bold"
        android:textColor="@color/background_dark"
        app:backgroundTint="@color/primary"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>